<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_design"
    tools:context=".empty_wallet">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="190dp"
        android:layout_height="168dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty_wallet" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="155dp"
        android:layout_height="53dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="224dp"
        android:gravity="center"
        android:text="OOPS !"
        android:fontFamily="@font/metropolis_extra_bold"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="224dp"
        android:layout_height="47dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="448dp"
        android:fontFamily="@font/metropolis_extra_bold"
        android:gravity="center"
        android:text="No Orders Placed"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="256dp"
        android:background="#FF5722"
        android:text="Go Shopping"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>