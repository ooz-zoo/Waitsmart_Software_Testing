    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="35dp"
        android:elevation="20dp"
        android:background="@drawable/circle_white_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_forwardarrow" />

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/transacttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:text="Transaction ID:"
            android:fontFamily="@font/metropolis_semi_bold"
            />

        <TextView
            android:id="@+id/transactcode"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/metropolis_medium"
            android:text="0000000000ABC"

            />

        <TextView
            android:id="@+id/orderdate"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/metropolis_extra_bold"
            android:text="00/00/0000" />

        <ImageView
            android:id="@+id/lineicon"
            android:layout_width="192dp"
            android:layout_height="16dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/img_2" />

        <TextView
            android:id="@+id/totaltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/MainColor"
            android:fontFamily="@font/metropolis_medium"
            android:layout_marginStart="35dp"
            android:layout_marginTop="80dp"
            android:text="Total" />

        <ImageView
            android:id="@+id/minusicon"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="95dp"
            app:srcCompat="@drawable/icon_wallet" />

        <TextView
            android:id="@+id/totalordercost"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginStart="115dp"
            android:fontFamily="@font/metropolis_semi_bold"
            android:text="KES 000" />

        <TextView
            android:id="@+id/viewdetails"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="245dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/metropolis_extra_bold"
            android:text="VIEW DETAILS"
            android:gravity="center"
            android:rotation="-90"
            android:textSize="12sp"
            android:textColor="@color/MainColor" />

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>