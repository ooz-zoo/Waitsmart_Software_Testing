<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_design"
    tools:context=".Confirmed_order">

        <ImageView
            android:id="@+id/back"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backarrow" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="138dp"
            android:layout_height="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="120dp"
            android:fontFamily="@font/metropolis_extra_bold"
            android:text="Confirmation"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="314dp"
            android:layout_height="56dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/metropolis_extra_bold"
            android:gravity="center"
            android:text="Order Confirmed"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="85dp"
            android:layout_height="86dp"
            android:layout_marginStart="175dp"
            android:layout_marginTop="290dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/check_button_circle" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="219dp"
            android:layout_height="60dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="370dp"
            android:fontFamily="@font/metropolis_semi_bold"
            android:gravity="center"
            android:text="Thank you!"
            android:textColor="@color/SecondaryFontColor"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="430dp"
            android:layout_marginRight="135dp"
            android:background="@drawable/circle_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="9dp"
                android:adjustViewBounds="true"
                android:background="@drawable/circle"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_profile_2" />

        </RelativeLayout>

        <TextView
            android:id="@+id/username"
            android:layout_width="247dp"
            android:layout_height="48dp"
            android:layout_marginStart="97dp"
            android:layout_marginTop="530dp"
            android:fontFamily="@font/metropolis_extra_bold"
            android:gravity="center"
            android:text="Nombre"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="153dp"
        android:layout_height="49dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="620dp"
        android:fontFamily="@font/metropolis_extra_bold"
        android:text="Ready by"
        android:textSize="25sp"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--Date-->
            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="690dp"
                android:layout_marginStart="70dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:id="@+id/dateCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/date_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/img_calendar" />

                    <TextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="28dp"
                        android:fontFamily="@font/metropolis_bold"
                        android:text="00"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="-20dp"
                        android:layout_marginLeft="60dp"
                        android:fontFamily="@font/metropolis_bold"
                        android:text="Month"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="43dp"
                        android:fontFamily="@font/metropolis_bold"
                        android:text="0000"
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="690dp"
                android:layout_marginStart="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:id="@+id/timeCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/time_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/icon_clock" />

                   <!-- <TextView
                        android:id="@+id/hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="37dp"
                        android:fontFamily="@font/metropolis_bold"
                        android:text="00"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/colon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-25dp"
                        android:layout_marginLeft="-9dp"
                        android:fontFamily="@font/metropolis_bold"
                        android:text=":"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="-23dp"
                        android:layout_marginLeft="65dp"
                        android:fontFamily="@font/metropolis_bold"
                        android:text="00"
                        android:textSize="16sp" />-->

                    <TextView
                        android:id="@+id/timeline"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="50dp"
                        android:fontFamily="@font/metropolis_bold"
                        android:text="am"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>